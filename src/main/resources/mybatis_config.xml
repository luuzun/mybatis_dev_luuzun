<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="application.properties" />
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/> <!-- 카멜표기식 자동 적용 -->
	</settings>
	<typeAliases>
		<package name="kr.or.dgit.mybatis_dev_luuzun.dto"/>
	</typeAliases>
	<typeHandlers>
		<package name="kr.or.dgit.mybatis_dev_luuzun.typehandlers"/>
	</typeHandlers>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="url" value="${url}" />
				<property name="driver" value="${driver}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<package name="kr.or.dgit.mybatis_dev_luuzun.dao"/>
	</mappers>
</configuration>

